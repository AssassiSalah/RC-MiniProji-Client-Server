<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ServerController">
    <Label text="FTP Server Control Panel" style="-fx-font-size: 16px;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Start Server" fx:id="startServerButton" onAction="#startServer"/>
        <Button text="Stop Server" fx:id="stopServerButton" disable="true" onAction="#stopServer"/>
    </HBox>
    
    <Label text="Connected Clients:"/>
    <ListView fx:id="clientList" prefHeight="200" prefWidth="300"/>

    <Label text="File Transfers:"/>
    <TextArea fx:id="fileTransferLog" prefHeight="200" prefWidth="300" editable="false"/>
</VBox>

