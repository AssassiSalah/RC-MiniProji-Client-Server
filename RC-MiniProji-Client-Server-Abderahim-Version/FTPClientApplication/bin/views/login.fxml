<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <Label text="FTP Client Login" style="-fx-font-size: 16px;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" fx:id="loginButton" onAction="#handleLogin"/>
        <Button text="Register" fx:id="registerButton" onAction="#handleRegister"/>
    </HBox>

    <Label fx:id="messageLabel" textFill="red"/>
</VBox>

